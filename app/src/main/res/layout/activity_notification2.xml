<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Other_Fragments.Notification2">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".Other_Fragments.Notification2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ImageView
          android:id="@+id/blacklogo"
          android:layout_width="126dp"
          android:layout_height="128dp"
          android:layout_marginStart="160dp"
          android:src="@drawable/blacklogo"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/paddle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="190dp"
          android:layout_marginTop="85dp"
          android:fontFamily="@font/gilbert"
          android:text="PaddleGo"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/notification"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="28dp"
          android:layout_marginTop="128dp"
          android:fontFamily="@font/poppins_bold"
          android:text="Notifications"
          android:textColor="@color/black"
          android:textSize="20sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/communities"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="28dp"
          android:fontFamily="@font/poppins_bold"
          android:text="Communities"
          android:textColor="@color/third"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/notification" />

      <TextView
          android:id="@+id/messages"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="160dp"
          android:fontFamily="@font/poppins_bold"
          android:text="Messages"
          android:textColor="@color/black"
          app:layout_constraintStart_toEndOf="@+id/communities"
          app:layout_constraintTop_toTopOf="@+id/communities" />

      <TextView
          android:id="@+id/bar"
          android:layout_width="97dp"
          android:layout_height="2dp"
          android:layout_marginStart="276dp"
          android:background="@drawable/bottombar"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/messages" />

      <ScrollView
          android:layout_width="450dp"
          android:layout_height="794dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/communities">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:id="@+id/lightash"
              android:layout_width="365dp"
              android:layout_height="94dp"
              android:layout_marginStart="40dp"
              android:layout_marginTop="36dp"
              android:layout_marginEnd="40dp"
              android:background="@drawable/lightashwidget"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/light2" />

          <TextView
              android:id="@+id/light2"
              android:layout_width="361dp"
              android:layout_height="93dp"
              android:layout_marginStart="40dp"
              android:layout_marginTop="40dp"
              android:layout_marginEnd="40dp"
              android:background="@drawable/lightashwidget"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <TextView
              android:id="@+id/make"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="12dp"
              android:layout_marginTop="28dp"
              android:fontFamily="@font/poppins_regular"
              android:text="Make sure that for the damages done by you have to be \npaid when the bicycle returns"
              android:textSize="12sp"
              app:layout_constraintStart_toStartOf="@+id/light2"
              app:layout_constraintTop_toTopOf="@+id/light2" />

          <TextView
              android:id="@+id/collect"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginTop="28dp"
              android:fontFamily="@font/poppins_regular"
              android:text="Please collect your driving licence, NIC or Passport when \nyou handing over the bicycle"
              android:textSize="12sp"
              app:layout_constraintStart_toStartOf="@+id/lightash"
              app:layout_constraintTop_toTopOf="@+id/lightash" />
        </androidx.constraintlayout.widget.ConstraintLayout>

      </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </FrameLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="126dp"
        android:layout_height="128dp"
        android:layout_marginStart="160dp"
        android:src="@drawable/blacklogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/gilbert"
        android:text="PaddleGo"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Notifications"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Communities"
        android:textColor="@color/third"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Messages"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/community"
        app:layout_constraintTop_toTopOf="@+id/community" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="97dp"
        android:layout_height="2dp"
        android:layout_marginStart="276dp"
        android:background="@drawable/bottombar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <ScrollView
        android:layout_width="450dp"
        android:layout_height="794dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/community"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>